# Frontend environment variables (example)
# Copy to .env.local and update with your values

# API Base URL (optional, defaults to same origin)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api/v1

# Enable MSW mocking for development
NEXT_PUBLIC_USE_MOCK=true
NEXT_PUBLIC_API_MOCKING=enabled

# Backend internal origin for Server Components
BACKEND_INTERNAL_ORIGIN=http://127.0.0.1:8000